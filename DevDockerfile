FROM nginx:1.15-alpine
COPY static /usr/share/nginx/html/main
COPY Reminders/Frontend/reminders/dist /usr/share/nginx/html/reminders
COPY nginx.conf /etc/nginx/nginx.conf
COPY dev-ssl.conf /etc/nginx/ssl.conf
COPY security-headers.conf /etc/nginx/security-headers.conf
RUN rm -f /etc/nginx/conf.d/default.conf
COPY server.conf /etc/nginx/conf.d/server.conf
COPY dev-certs /etc/nginx/certs
COPY server_name-dev.conf /etc/nginx/server_name.conf
COPY server_name_main-dev.conf /etc/nginx/server_name_main.conf
COPY server_name_reminders-dev.conf /etc/nginx/server_name_reminders.conf
